{
  "name": "markopolo-ai-microservices",
  "version": "1.0.0",
  "description": "Markopolo AI - Scalable Microservices Architecture",
  "private": true,
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:logs": "docker-compose logs -f",
    "dev:down": "docker-compose down",
    "dev:clean": "docker-compose down -v --remove-orphans",
    "build": "docker-compose build",
    "start": "./scripts/start-microservices.sh",
    "test": "echo 'Run tests in individual services'",
    "lint": "echo 'Run linting in individual services'",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "k8s:delete": "kubectl delete -f infrastructure/kubernetes/",
    "k8s:status": "kubectl get pods -n markopolo-ai",
    "k8s:logs": "kubectl logs -f -l app=api-gateway -n markopolo-ai",
    "cleanup": "docker system prune -f && docker volume prune -f"
  },
  "keywords": [
    "microservices",
    "nodejs",
    "typescript",
    "kafka",
    "redis",
    "postgresql",
    "kubernetes",
    "docker",
    "ai",
    "marketing",
    "campaigns"
  ],
  "author": "Markopolo AI Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/markopolo-ai/microservices-architecture.git"
  },
  "bugs": {
    "url": "https://github.com/markopolo-ai/microservices-architecture/issues"
  },
  "homepage": "https://github.com/markopolo-ai/microservices-architecture#readme",
  "dependencies": {
    "kafkajs": "^2.2.4",
    "winston": "^3.18.3"
  }
}
